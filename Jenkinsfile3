pipeline {
   agent any
   tools {
      maven 'maven3.6.0'
   }
   stages{
      stage('build with maven'){
        steps{
          sh "mvn clean package"
        }
      }
      stage('upload artifacts to nexus'){
        steps{
         script{
           def mavenPom = readMavenPom file: 'pom.xml'
           def nexusRepoName = mavenPom.version.endsWith("SNAPSHOT") ? "simple-java-application-snapshot" : "simple-java-application-release"
           nexusArtifactUploader artifacts: [
              [
                artifactId: 'sample-java-application',
                classifier: '',
                file: 'target/sample-java-application.jar',
                type: 'jar'
              ]
           ],
           credentialsId: 'nexus3',
           groupId: 'com.example',
           nexusUrl: '192.168.1.4:8081',
           nexusVersion: 'nexus3',
           protocol: 'http',
           repository: nexusRepoName,
           version: "${mavenPom.version}"

         }

        }

      }


   }
}

